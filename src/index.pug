        script(type='text/javascript' src='assets/js/jquery-3.3.1.min.js')
        script(type='text/javascript' src='assets/js/slick.min.js')
        script(type='text/javascript' src='assets/js/particles.min.js')
        script.
            particlesJS.load('particles-js', 'assets/js/particles.json', function() {
                console.log('callback - particles.js config loaded');
            });

            $(function() {
                $('.screenshots').slick({
                    slidesToShow: 1,
                    centerMode: true,
                    centerPadding: '0',
                    speed: 1000,
                    autoplay: true,
                    variableWidth: true,
                    arrows: false,
                    dots: true,
                    pauseOnHover: false,
                    pauseOnDotsHover: true,
                });

                const $window = $(window);
                const $nav = $('#nav');

                // toggle navigation background on scroll
                var scrolled = false;
                $nav.toggleClass('bg-blue-dark', $window.scrollTop() > 1)
                $(document).on('scroll', function () {
                    if (!scrolled) {
                        scrolled = true;
                        setTimeout(function () {
                            $nav.toggleClass('bg-blue-dark', $window.scrollTop() > 1)
                            scrolled = false;
                        }, 100)
                    }
                });

                // slide up mobile navigation and remove background if necessary
                const slideMobileNavUp = function() {
                    $navItems.slideUp(function() {
                        $navItems.css('display', '');
                        if ($window.scrollTop() < 1) $nav.toggleClass('bg-blue-dark', false);
                    });
                }

                // toggle mobile navigation
                const $navItems = $('#nav-items');
                $('#nav-toggle').on('click', function() {
                    if ($navItems.is(':visible')) {
                        slideMobileNavUp();
                    } else {
                        $navItems.slideDown();
                        $nav.toggleClass('bg-blue-dark', true);
                    }
                });
                $('#nav-items a').on('click', function() {
                    if ($window.width() < 992) {
                        slideMobileNavUp();
                    }
                });

                // smooth scroll to navigation pagelinks
                const navHeight = $nav.height() - 2;
                $('#nav-items a[href*="#"]').on('click', function(event) {
                    const $target = $('[name=' + this.hash.slice(1) + ']');
                    if ($target.length) {
                        window.location.hash = this.hash
                        event.preventDefault();
                        $('html, body').animate({
                            scrollTop: $target.offset().top - navHeight,
                        }, 750);
                    }
                });
            });
